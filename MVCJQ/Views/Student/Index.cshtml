@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script>
        $(document).ready(function () {
            clearData();
            FetchStudents();
            
            $('#btnsubmit').click(function () {
                AddStudents();
            })
            $('#btnupdate').click(function () {
                UpdateStudents();
            })
            $('#btnclear').click(function () {
                clearData();
            })
        })
        function AddStudents() {
            var n = $('#txtname').val();
            var e = $('#txtenglish').val();
            var m = $('#txtmaths').val();
            var s = $('#txtscience').val();
            var st = { "Name": n, "English":e, "Maths": m, "Science": s };
            $.ajax({
                url: '/Student/AddStudent',
                method: 'post',
                data: JSON.stringify(st),
                contentType: 'application/json',
                success: function (resp) {
                    alert(resp);
                    FetchStudents();
                    clearData();
                }
            })
        }
        function UpdateStudents() {
            var r = $('#txtrno').val();
            var n = $('#txtname').val();
            var e = $('#txtenglish').val();
            var m = $('#txtmaths').val();
            var s = $('#txtscience').val();
            var st = { "Rno":r,"Name": n, "English": e, "Maths": m, "Science": s };
            $.ajax({
                url: '/Student/Updatestudent',
                method: 'post',
                data: JSON.stringify(st),
                contentType: 'application/json',
                success: function (resp) {
                    alert(resp);
                    FetchStudents();
                    clearData();
                }
            })
        }
        function clearData() {
            $('#txtrno').val("");
            $('#txtname').val("");
            $('#txtenglish').val("");
            $('#txtmaths').val("");
            $('#txtscience').val("");

            $('#tbtnsubmit').show();
            $('#btnupdate').hide();
        }


        function FetchStudents() {
            $.ajax({
                url: '/Student/GetAllStudents',
                method: 'get',
                contentType: 'application/json',
                success: function (resp) {
                    console.log(resp);
                    $('#tbldata').empty();
                    $.each(resp, function (i, d) {
                        $('#tbldata').append("<tr><td>" + d.Rno + "</td><td>" + d.Name + "</td><td>" + d.English + "</td><td>" + d.Maths + "</td><td>" + d.Science + "</td><td><input type='button' value='view' onclick='ViewStudent(" + d.Rno + ")'/> &nbsp; <input type='button' value='Delete' onclick='DeleteStudent(" + d.Rno +")'/> </td></tr>")
                    })
                }
            })
           
        }
        function ViewStudent(Rno) {
            $.ajax({
                url: '/Student/GetStudent/' + Rno,
                method: 'get',
                contentType: 'application/json',
                success: function (resp) {
                    console.log(resp)
                    $('#txtrno').val(resp.Rno);
                    $('#txtname').val(resp.Name);
                    $('#txtenglish').val(resp.English);
                    $('#txtmaths').val(resp.Maths);
                    $('#txtscience').val(resp.Science);

                    $('#tbtnsubmit').hide();
                    $('#btnupdate').show();

                }

            })
        }
        function DeleteStudent(Rno) {
            $.ajax({
                url: '/Student/DeleteStudent/' + Rno,
                method: 'post',
                contentType: 'application/json',
                success: function (resp) {
                    alert(resp);
                    clearData();
                    FetchStudents();
                }

            })

        }
    </script>
</head>
<body>
    <div class=" row mt-4"> 
        <div class="col-md-4" >
            <table class="table table-bordered">
                <tr>
                    <td>Enter RollNo</td>
                    <td><input type="text" id="txtrno" /></td>
                </tr>
                <tr>
                    <td>Enter Name</td>
                    <td><input type="text" id="txtname" /></td>
                </tr>
                <tr>
                    <td>English</td>
                    <td><input type="text" id="txtenglish" /></td>
                </tr>
                <tr>
                    <td>Maths</td>
                    <td><input type="text" id="txtmaths" /></td>
                </tr>

                <tr>
                    <td>Science</td>
                    <td><input type="text" id="txtscience" /></td>
                </tr>
                <tr>
                    <td>
                        <input type="button" value="submit" id="btnsubmit" />
                        &nbsp;
                        <input type="button" value="update" id="btnupdate" />
                        &nbsp;
                        <input type="button" value="Clear" id="btnclear" />


                    </td>
                </tr>
            </table>

        </div>
        <div class="container mt-4 col-md-8">
            <table class=" table table-bordered">
                <thead>
                    <tr>
                        <th>Roll No</th>
                        <th>Name</th>
                        <th>English</th>
                        <th>Maths</th>
                        <th>Science</th>
                    </tr>

                </thead>
                <tbody id="tbldata"></tbody>
            </table>

        </div>
    </div>
</body>
</html>
